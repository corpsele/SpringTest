<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <!-- 指定Web应用的默认编码集,相当于调用HttpServletRequest的setCharacterEncoding方法 -->
    <constant name="struts.i18n.encoding" value="UTF-8" />
    <!--该属性指定需要Struts 2处理的请求后缀，该属性的默认值是action，即所有匹配*.action的请求都由Struts2处理。 如果用户需要指定多个请求后缀，则多个后缀之间以英文逗号（,）隔开-->
    <constant name="struts.action.extension" value="do,action,htm" />
    <!-- strtus2 开放动态方法访问 DMI-->
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>

    <package name="strong" extends="struts-default,json-default">
        <!--<action name="index">-->
            <!--<result>/index.jsp</result>-->
        <!--</action>-->
        <action name="api_*" class="action.ApiAction" method="{1}">
            <result name="success" type="json">
                <param name="root">user</param>
            </result>
            <result name="getall" type="json">
                <param name="root">array</param>
            </result>
        </action>
    </package>
</struts>